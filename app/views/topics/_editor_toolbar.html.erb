<div class="editor-toolbar">
  <div class="icons pull-right">
    <span class="dropdown dropdown-small" id="editor-toolbar-insert-code">
      <a href="#editor-toolbar-insert-code" data-toggle="dropdown" class="icon small_code" rel="twipsy" title="<%= t("topics.insert_codes") %>" href="#editor-toolbar-insert-code"></a>
      <ul class="dropdown-menu" role="menu">
        <%= insert_code_menu_items_tag %>
      </ul>
    </span>
    <%= link_to("", "#", id: "topic_add_image", rel: "twipsy", title: t("topics.add_image"), class: "icon small_image")%>
