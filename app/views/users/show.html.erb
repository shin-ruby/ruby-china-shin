<%= render "menu" %>

<div class="content">
  <%= render "info" %>
  
  <div class="tabbable">
    <div class="subnav">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#topics" data-toggle="tab">热门话题</a></li>
        <li><a href="#replies" data-toggle="tab">最近回帖</a></li>
        <li><a href="#message" data-toggle="tab">站内短信</a></li>
        <li><a href="#notice" data-toggle="tab">站内公告</a></li>
      </ul>
    </div>
    <div class="tab-content">
      <div class="tab-pane active recent-topics" id="topics">
        <div class="box">
          <ul>
            <% @topics.each do |item| %>
              <li>
                <div class="title">
                  <%= topic_title_tag(item) %> <%= topic_excellent_tag(item) %>
                </div>
                <div class="info">
                  <span class="node"><%= render_node_name(item.node_name,item.node_id) %></span>
                  <span class="counter"><%= item.likes_count %> 人喜欢 • <%= item.replies_count %> 条回复</span>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="tab-pane" id="replies">
        <div class="box">
          <%= render "replies", replies: @replies %>
        </div>
      </div>
      <div class="tab-pane" id="message">
        <div class="box">
          <% @messages.each do |m| %>
            <%= render "messages/message", message: m %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane" id="notice">
        <div class="box">
          <% @notices.each do |n| %>
            <%= render "notices/notice", notice: n %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  


</div>
<%= render "sidebar", user: @user %>
